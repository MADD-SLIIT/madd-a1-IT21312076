<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".MainActivity">

    <!-- Profile Section -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        android:layout_marginTop="16dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/good_morning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning!"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alex"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/good_morning_text"
        app:layout_constraintTop_toBottomOf="@id/good_morning_text"/>

    <!-- Weather Section -->
    <RelativeLayout
        android:id="@+id/weather_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19Â°"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/weather_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ragala, Nuwara Eliya"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_below="@id/weather_temp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/weather_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mid Rain"
            android:textColor="@android:color/white"
            android:layout_below="@id/weather_location"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/weather"/>
    </RelativeLayout>

    <!-- Market View Horizontal Scroll -->
    <HorizontalScrollView
        android:id="@+id/market_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/weather_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Market Item -->
            <LinearLayout
                android:layout_width="402dp"
                android:layout_height="119dp"
                android:background="@drawable/green"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/onion" />

                <TextView
                    android:gravity="center"
                    android:text="Onion"
                    android:textSize="14sp" />

                <TextView
                    android:gravity="center"
                    android:text="Rs. 50/kg"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Repeat similar blocks for other items like Carrots, etc. -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Agri Services Horizontal Scroll -->
    <HorizontalScrollView
        android:id="@+id/agri_services"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/market_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none">

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="510dp">

    </LinearLayout>

    <ImageView
        android:id="@+id/buy_medicine"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/medicine"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="345dp" />

    <ImageView
        android:id="@+id/agri_counsel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/counsel"
        tools:layout_editor_absoluteX="313dp"
        tools:layout_editor_absoluteY="337dp" />

    <ImageView
        android:id="@+id/buy_machinery"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/machinery"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="340dp" />

</androidx.constraintlayout.widget.ConstraintLayout>